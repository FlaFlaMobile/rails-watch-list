<div class="container mt-5">
    <h1 class="text-center mb-4">Create a New List</h1>

    <%= simple_form_for(@list) do |f| %>
        <div class="form-group">
            <%= f.input :name, label: 'List Name', placeholder: 'Enter the name of the list', input_html: { class: 'form-control' } %>
        </div>

        <div class="mt-4 text-center d-flex justify-content-center">
            <%= f.button :submit, 'Create List', class: "btn btn-primary me-2" %>
            <%= link_to 'Annuler', lists_path, class: "btn btn-secondary" %>
        </div>

    <% end %>
</div>
