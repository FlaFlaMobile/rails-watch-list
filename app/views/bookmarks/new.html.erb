<div class="container mt-5">
    <h1 class="text-center mb-4">Add a Movie to <%= @list.name %></h1>

    <%= simple_form_for([@list, @bookmark]) do |f| %>
        <div class="form-group">
            <%= f.association :movie, collection: @movies, label_method: :title, value_method: :id, include_blank: false, input_html: { class: 'form-control' } %>
            <%= f.input :comment, label: 'Comment', placeholder: 'Enter a comment', input_html: { class: 'form-control' } %>
        </div>

        <div class="mt-4 text-center">
            <%= f.button :submit, 'Add Movie', class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
